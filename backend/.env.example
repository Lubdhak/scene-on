# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=scene_on
DB_SSLMODE=disable

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h

# Email (for OTP) - Configure with your SMTP provider
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Scene Configuration
SCENE_DEFAULT_TTL=4h
SCENE_MAX_RADIUS_METERS=5000
FUZZY_LOCATION_RADIUS_METERS=100

# Rate Limiting
RATE_LIMIT_YELLS_PER_HOUR=10
RATE_LIMIT_CHAT_REQUESTS_PER_HOUR=20

# Server
SERVER_PORT=8080
GIN_MODE=debug
